@page "/"

<h3>FakeAsana</h3>

@for (int i = 0; i < 10; i++)
{
    var card = new Card();
    card.MyRef = i;
    card.Name = i.ToString()+"さん";
    <Card @ref="card" OnClick="@(() => CardClick(card))" OnMouseDown="@(()=>CardMouseDown())" OnMouseMove="@(()=>CardMouseMove())" OnMouseUp="@(()=>CardMouseUp())" OnMouseOver="@(()=>CardMouseOver())" OnMouseOut="@(()=>CardMouseOut())" ></Card>
    Cards.Add(card);
}


@code {
    private List<Card> Cards = new List<Card>();

    private async Task CardClick(Card card)
    {
        System.Console.WriteLine($"click {card.MyRef}, name {card.Name}");
    }

    private async Task CardMouseDown()
    {
        System.Console.WriteLine("mouse down");
    }

    private async Task CardMouseMove()
    {
        System.Console.WriteLine("mouse move");
    }

    private async Task CardMouseUp()
    {
        System.Console.WriteLine("mouse up");
    }

    private async Task CardMouseOver()
    {
        System.Console.WriteLine("mouse over");
    }

    private async Task CardMouseOut()
    {
        System.Console.WriteLine("mouse outja");
    }
}
